pipeline {
    agent any 
    stages {
        stage('build') {
            steps {
            	nodejs('node') {
	            sh """
			    npm install 
	            npm run test
			    """
	            }
            }
        }
    }
    post {

	    always {
	            echo 'Always generate report.'
		        junit 'tests/reports/*.xml'      
	    }
    }
}