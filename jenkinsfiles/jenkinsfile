pipeline{
    agent any
    tools {nodejs "node"}

    stages("x"){
        stage('Checkout') {
            steps{
            echo 'Getting source code...'
            checkout scm
            }
        }

        stage('Build') {
            steps{
                echo 'Building dependencies...'
                sh 'npm i'
            }
        }

        stage('Test') {
            steps{
                echo 'Testing...'
                sh 'npm test'
            }
        }

        stage('Publish') {
            steps{
                echo 'Publishing Test Coverage...'
                archiveArtifacts artifacts: 'tests/reports/*.xml', followSymlinks: false
                }}
        }
    }



}