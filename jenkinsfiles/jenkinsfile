pipeline {
    agent any 
    stages {
        stage('build') {
            steps {
            	nodejs('node') {
	            bat 'npm i'
                bat 'npm run test'
	            }
            }
        }
    }
    post {

	    always {
                echo 'Publishing reports'
		        archiveArtifacts artifacts: 'tests/reports/screenshots/*.png', followSymlinks: false
                junit 'tests/reports/*.xml'      
	    }
    }
}